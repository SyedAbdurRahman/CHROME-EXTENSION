{
  "manifest_version": 3,
  "name": "ProcrastiNo",
  "version": "1.0",
  "description": "Track your time, block distractions, and stay focused â€” all in one powerful Chrome extension.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": { "192": "logo192.png" }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
      "192": "logo192.png",
      "512": "logo512.png"
  }
}
